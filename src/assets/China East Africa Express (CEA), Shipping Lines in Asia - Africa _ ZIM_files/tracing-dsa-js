$(document).ready(function(){function t(){$(".trace-dsa-form").find('input[type="submit"]').removeAttr("disabled");$(".trace-dsa-form").find(".dsa-cancel").removeAttr("disabled");$(".trace-dsa-form").find('input[name="email"]').val("");$("#"+$(".trace-dsa-form").find(".captcha-input input").attr("id")).get(0).Captcha.ReloadImage()}function i(){$(".mobile-dsa-block").hide();$(".progress-block").show();$(".progress-info-mobile").removeClass("progress-info-hide");$(".steps-section").removeClass("padding-zero");$(".search-shipment-form").show();$(".page-title").show();$(".details.details-container.visible-xs").removeClass("hide-important");$(".routing-details-mobile.visible-xs").removeClass("hide-important")}function n(r){$("#popup_trace").modal("hide");i();$(".tracing-popup, .mobile-dsa-block").find(".success-box").html("");$(".tracing-popup, .mobile-dsa-block").find(".dsa-form-box, .dsa-mobile-form-box").show();$(".btn-close").unbind("click",null,n);t();r.preventDefault()}$(".trace-notifications-link").length&&$(".trace-notifications-link").click(function(n){n.preventDefault();$("#popup_trace").modal("show")});$(".dsa-cancel").click(function(){$("#popup_trace").modal("hide")});$(".trace-dsa-form").bind("submit",function(i){var r,u,f;$(i.currentTarget).valid()&&($(i.currentTarget).find("#validationError").hide(),$(i.currentTarget).find('input[type="submit"]').attr("disabled","disabled"),$(i.currentTarget).find(".dsa-cancel").attr("disabled","disabled"),r=$(i.currentTarget),u={},$.each(r.serializeArray(),function(n,t){u[t.name]=t.value}),u.ConsNumber=$("html").find(".cons-number").html(),u.ConsType=$("html").find(".cons-number").data("type"),f=$("html").attr("data-culture"),$.ajax({url:"/umbraco/surface/TrackShipment/DsaSubmit?culture="+f,method:"POST",data:u,success:function(i){var u=$.parseJSON(i);u.IsValid?(r.parents(".modal-content, .data-content").find(".success-box").html(u.Content),r.parents(".dsa-form-box, .dsa-mobile-form-box").hide(),r.parents(".modal-content, .data-content").find(".success-box .button.btn-primary-popup").bind("click",null,n),$(".btn-close, .dsa-close").bind("click",null,n)):(r.find("#validationError > span").html(u.Content),r.find("#validationError").show(),t())},error:function(n){var t=$.parseJSON(n);r.parents(".dsa-form-box").html(t.Content);r.parents(".data-content").html(t.Content)}}));i.preventDefault()});$(".mobile-notifications-link").click(function(n){$(".mobile-dsa-block").show();$(".progress-block").hide();$(".progress-info-mobile").addClass("progress-info-hide");$(".steps-section").addClass("padding-zero");$(".search-shipment-form").hide();$(".page-title").hide();$(".details.details-container.visible-xs").addClass("hide-important");$(".routing-details-mobile.visible-xs").addClass("hide-important");n.preventDefault()});$(".dsa-close, .mobile-dsa-block .dsa-cancel").click(function(){i()});$(".dsa-refresh").click(function(n){n.preventDefault();location.reload()})})